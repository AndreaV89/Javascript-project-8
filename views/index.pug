extends layout

block content
  p
    a.button(href='../../books/new') Create New Book
  form#search(action='/books/search' method='get')
    input(type='submit' value='Search Book')
    input(type='text', name='search', placeholder='Search ...')
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
      each book in books
        tr
          td
            a(href= "/books/" + book.id)= book.title
          td= book.author
          td= book.genre
          td= book.year
  div#pagination
    - for (let i = 1; i < numberOfPage + 1; ++i) {
      a.button(href='../../books/page/' + i)= i
    - }




