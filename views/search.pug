extends layout

block content
  p
    a.button(href='books/new') Create New Book
  form#search(action='/books/search' method='get')
    input(type='submit' value='Search Book')
    input(type='text', name='search', placeholder='Search ...')
  if searchTerm === '' || books.length === 0
    h3 Sorry, no results found...
    p Please try again.
  else
    table
      thead
        tr
          th Title
          th Author
          th Genre
          th Year
      tbody
        each book in books
          tr
            td
              a(href= "/books/" + book.id)= book.title
            td= book.author
            td= book.genre
            td= book.year
  p
  a.button(href='/books') Home